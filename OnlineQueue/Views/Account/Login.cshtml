@model OnlineQueue.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Вход";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post" asp-controller="Account" asp-action="Login"
                  asp-route-returnUrl="@Model.ReturnUrl">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="input-group">
                    <span class="input-group-text" id="basic-addon1">@@</span>
                    <input class="form-control" placeholder="Введите email" aria-describedby="basic-addon1" asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div>
                    <br />
                    <label asp-for="Password"></label><br />
                    <input class="form-control" placeholder="Введите пароль" asp-for="Password" />
                    <span asp-validation-for="Password"></span><br />
                </div>
                <div>
                    <label asp-for="RememberMe"></label>
                    <input type="checkbox" asp-for="RememberMe" />
                </div>
                <div class="btn-group-lg">
                    <div class="btn-group" role="group">
                        <input class="btn btn-success" type="submit" value="Войти" />
                    </div>
                    <div class="btn-group" role="group">
                        <a class="btn btn-outline-danger" asp-area="" asp-controller="Account" asp-action="ForgotPassword">Забыли пароль?</a>
                    </div>
                </div>
            </form>
            <br />
        </section>
    </div>
</div>